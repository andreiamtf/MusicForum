@model MyMusic.ViewModels.MusicCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}


    <div id="maincontainer">

    <h3>
        <em>Review</em> your cart:
    </h3>

    <br />

        @*Warning sucess messages*@
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-dismissible alert-info">
                <button type="button" class="close" data-dismiss="alert"><span class="glyphicon glyphicon-remove"></span></button>
                <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
            </div>
        }
        <table class="table table-striped table-hover ">
            <tr>
                <th>
                    Album Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    
                    Price £(each)
                </th>
                <th>
                    Operations
                </th>
                <th>
                 
                </th>
            </tr>
            @foreach (var item in Model.CartAlbums)
            {
                <tr>
                    <td>
                        <em>@item.Album.Title</em>
                    </td>
                    <td>
                        @item.Count
                    </td>
                    <td>
                        &pound @item.Album.Price 
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "RemoveFromCart", "MusicCart", new { id = item.RecordId }, null)
                    </td>

                </tr>
            }
            <tr>
                <td>
                   <b>Total:</b> 
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td id="cart-total">
                   <b>&pound @Model.CartTotal </b>
                </td>
            </tr>
        </table>

        <div id="Add">
            <button class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("AddressAndPayment", "Checkout")';return false;">Checkout</button>
            <button class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("Index", "Store")';return false;">Continue Shopping</button>
        </div>

</div>


